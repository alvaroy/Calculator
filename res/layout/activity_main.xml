<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="${relativePackage}.${activityClass}" >
    
    <EditText
        android:id="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:maxLength="@integer/max_integer_display"
        android:text="0" />

    <LinearLayout
        android:id="@+id/LinearLayoutRow1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".14" >

        <Button
            android:id="@+id/AC"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="AC" 
            android:background="@drawable/graytheme_btn_default_holo_light" />

        <Button
            android:id="@+id/Sign"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="+/-" 
			android:background="@drawable/graytheme_btn_default_holo_light" />

        <Button
            android:id="@+id/Pct"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="%" 	
            android:background="@drawable/graytheme_btn_default_holo_light" />

        <Button
            android:id="@+id/Div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="รท" 
            android:background="@drawable/orangetheme_btn_default_holo_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutRow2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".14" >

        <Button
            android:id="@+id/Num7"
            style="@style/AppBaseTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="7" />

        <Button
            android:id="@+id/Num8"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="8" />

        <Button
            android:id="@+id/Num9"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="9" />

        <Button
            android:id="@+id/Mult"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="ร" 
			android:background="@drawable/orangetheme_btn_default_holo_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutRow3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".14" >

        <Button
            android:id="@+id/Num4"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="4" />

        <Button
            android:id="@+id/Num5"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="5" />

        <Button
            android:id="@+id/Num6"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="6" />

        <Button
            android:id="@+id/Sub"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="-" 
            android:background="@drawable/orangetheme_btn_default_holo_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutRow4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".14" >

        <Button
            android:id="@+id/Num1"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="1" />

        <Button
            android:id="@+id/Num2"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="2" />

        <Button
            android:id="@+id/Num3"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="3" />

        <Button
            android:id="@+id/Add"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="+" 
            android:background="@drawable/orangetheme_btn_default_holo_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutRow5"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight=".14">

        <Button
            android:id="@+id/Num0"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="0" />

        <Button
            android:id="@+id/Dot"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="match_parent"
            android:text="." />

        <Button
            android:id="@+id/Eql"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="=" 
			android:background="@drawable/orangetheme_btn_default_holo_light" />

    </LinearLayout>

</LinearLayout>